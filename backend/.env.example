# Amazon Ads Optimizer â€” Environment Configuration
# Copy this to .env and fill in the values.

# Environment: "development" or "production"
ENVIRONMENT=development

# PostgreSQL connection string (asyncpg)
DATABASE_URL=postgresql+asyncpg://localhost/amazon_ads

# Secret key for session/token signing (REQUIRED in production)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=change-me-in-production

# API key for authenticating requests (REQUIRED in production)
# In development, leave empty to disable auth.
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
API_KEY=

# Bootstrap first admin (only used when no users exist)
# Set these on first deploy to create the initial admin account.
FIRST_ADMIN_EMAIL=
FIRST_ADMIN_PASSWORD=

# Fernet encryption key for credential secrets (REQUIRED in production)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=

# CORS allowed origins (comma-separated)
# Local dev + production frontend. Add your Railway frontend URL for live.
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,https://amazonmcp-frontend-production.up.railway.app

# OpenAI API key for AI features (optional)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o

# Anthropic API key for Claude models (optional)
ANTHROPIC_API_KEY=

# Resend (email notifications, optional)
RESEND_API_KEY=
FROM_EMAIL=

# Upstash Redis (optional, for caching/future features)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Cron secret for QStash scheduled jobs (optional)
CRON_SECRET=

# Amazon OAuth redirect (for get_tokens.py when testing from production)
# AMAZON_REDIRECT_URI=https://amazonmcp-backend-production.up.railway.app/api/auth/callback
